# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true
editor_rulers = [ 100 ]

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{json,tsx,css}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false